@model EPayments.Admin.Models.EserviceClient.EformsUserVM

<div class="container main-content">

    <h1 style="text-align: center;">Редакция на системен потребител за Е-Форми</h1>

    @using (Html.BeginForm(MVC.EserviceClient.ActionNames.EditEformsUser, MVC.EserviceClient.Name, new { id = Model.EserviceClientId, eserviceAdminUserId = Model.EserviceAdminUserId }, FormMethod.Post, new { @class = "clearfix", style = "display: block;" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary()
            <br />
        }

        <div class="row">

            @Html.Partial(MVC.EserviceClient.Views.FormEformsUser, Model)

            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pull-right">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <input class="btn blue-btn" type="submit" value="Запиши" style="width: 100%; padding: 5px 0 5px 0;">
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pull-right">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <a style="width: 100%; padding: 5px 0 5px 0; text-align: center;" class="btn grey-btn"
                       href="@Url.Action(MVC.EserviceClient.ActionNames.ViewEformsUser, MVC.EserviceClient.Name, new { id = Model.EserviceClientId, eserviceAdminUserId = Model.EserviceAdminUserId })">Отказ</a>
                </div>
            </div>
        </div>
    }

</div>