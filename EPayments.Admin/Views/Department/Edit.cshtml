@model EPayments.Admin.Models.Department.DepartmentVM

<div class="container main-content">

    <h1 style="text-align: center;">Редакция на административна структура</h1>

    @using (Html.BeginForm(MVC.Department.ActionNames.Edit, MVC.Department.Name, new { id = Model.DepartmentId }, FormMethod.Post, new { @class = "clearfix", style = "display: block;" }))
    {
        if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary()
            <br />
        }

        <div class="row">
            @Html.Partial(MVC.Department.Views.Form, Model)
        </div>

        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pull-right">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <input class="btn blue-btn" type="submit" value="Запиши" style="width: 100%; padding: 5px 0 5px 0;">
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pull-right">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <a style="width: 100%; padding: 5px 0 5px 0; text-align: center;" class="btn grey-btn"
                       href="@Url.Action(MVC.Department.ActionNames.View, MVC.Department.Name, new { id = Model.DepartmentId })">Отказ</a>
                </div>
            </div>
        </div>
    }

</div>