<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>Портал за електронни плащания - @ViewBag.Title</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/upxjs")
    <!--[if lt IE 9]>
    <script src="Scripts/html5shiv.js"></script>
    <script src="Scripts/respond.min.js"></script>
<![endif]-->
</head>
<body style="background-color: #808080;">
    <!-- CONTENT -->
    <div style="max-width: 700px; margin:0 auto; margin-top:30px; background-color: white; padding-left: 30px; padding-right: 30px; border-radius: 8px; box-shadow: 0 8px 26px 0 #505050, 0 12px 80px 0 #505050;">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
